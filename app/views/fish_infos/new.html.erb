<h1>Створити ноий запис про рибу</h1>

<%= form_with(model: @fish_info, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, "Назва риби" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :description, "Опис" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :features, "Особливості" %>
    <%= form.text_area :features, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :image, "Зображення" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>
  
  <%= form.submit "Створити", class: "btn btn-primary" %>
<% end %>

<%= link_to "Назад", fish_infos_path, class: "btn btn-secondary mt-3" %>
