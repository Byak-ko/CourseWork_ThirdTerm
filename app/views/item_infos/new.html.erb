<h1>Створення нового товару</h1>

<%= form_with(model: @item_info, url: item_infos_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, "Назва товару" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Опис товару" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :category, "Категорія" %>
<%= form.select :category, ItemInfo.categories.map { |key, value| [value, key] }, { selected: @item_info.category }, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :image, "Зображення" %>
    <%= form.file_field :image %>
  </div>

  <%= form.submit "Створити", class: "btn btn-primary" %>
<% end %>

<%= link_to "Назад", item_infos_path, class: "btn btn-secondary" %>
