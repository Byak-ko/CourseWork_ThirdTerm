<h1>Створити новий захід</h1>

<%= form_with(model: @event, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name, 'Назва заходу' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :date, 'Дата заходу' %>
    <%= form.date_field :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :location, 'Місце проведення' %>
    <%= form.text_field :location, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, 'Опис' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :organizer, 'Організатор' %>
    <%= form.text_field :organizer, class: 'form-control' %>
  </div>

  <%= form.submit 'Створити', class: 'btn btn-primary' %>
<% end %>
