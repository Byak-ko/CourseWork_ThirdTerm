<h2>Зареєструватися</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"Ім'я" %><br />
    <%= f.text_field :first_name, autofocus: true, class: "form-control form-control-sm", style:"width: 300px" %>
  </div>

  <div class="field">
    <%= f.label :Прізвище %><br />
    <%= f.text_field :last_name, class: "form-control form-control-sm" , style:"width: 300px" %>
  </div>

  <div class="field">
    <%= f.label :Адреса %><br />
    <%= f.text_field :address, class: "form-control form-control-sm", style:"width: 300px" %>
  </div>

  <div class="field">
    <%= f.label :Телефон %><br />
    <%= f.text_field :phone, class: "form-control form-control-sm", style:"width: 300px" %>
  </div>

  <div class="field">
    <%= f.label :Електронна_пошта %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-sm", style:"width: 300px" %>
  </div>

  <div class="field">
    <%= f.label :Пароль %><br />
    <% if @minimum_password_length %>
      <em>(мінімум <%= @minimum_password_length %> символів)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm", style:"width: 300px" %>
  </div>

  <div class="field">
    <%= f.label :Підтвердження_пароля %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm", style:"width: 300px" %>
  </div>

  <div class="actions">
    <%= f.submit "Зареєструватися", class: "btn btn-primary btn-sm", style:"width: 300px" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
