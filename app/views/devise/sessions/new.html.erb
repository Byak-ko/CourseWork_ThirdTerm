<h2>Увійти</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :Електронна_пошта %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style:"width: 300px" %>
  </div>

  <div class="field">
    <%= f.label :Пароль %><br />
    <%= f.password_field :password, autocomplete: "current-password" , style:"width: 300px" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :"Запам'ятати" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Увійти" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
