<h1>Створення нового замовлення</h1>

<%= form_with(model: @order_info, url: order_infos_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :item_info_id, "Оберіть товар" %>
    <%= form.select :item_info_id, options_for_select(ItemInfo.all.map{ |item| [item.name, item.id] }, params[:item_info_id]), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :price, "Ціна" %>
    <%= form.text_field :price, class: "form-control" %>
  </div>
  <%= form.hidden_field :creator_id, value: @current_member.id, class: "form-control" %>
  <%= form.submit "Створити", class: "btn btn-primary" %>
<% end %>


<%= link_to "Назад", order_infos_path, class: "btn btn-secondary" %>

