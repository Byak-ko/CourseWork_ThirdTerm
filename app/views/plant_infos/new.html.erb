<h1>Створити новий запис про рослину</h1>

<%= form_with(model: @plant_info, url: plant_infos_path, method: "post") do |form| %>
  <div class="form-group">
    <%= form.label :name, "Назва риби" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :description, "Опис" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :optimal_growth_conditions, "Оптимальні умови росту" %>
    <%= form.text_area :optimal_growth_conditions, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :image, "Зображення" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>
  
  <%= form.submit "Створити", class: "btn btn-primary" %>
<% end %>

<%= link_to "Назад", plant_infos_path, class: "btn btn-secondary mt-3" %>
